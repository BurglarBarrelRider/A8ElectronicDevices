<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" padding="20" fx:controller="org.example.a7electronicdevices.HelloController">
    <Label text="Device Manager" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Device Type:" />
        <ComboBox fx:id="deviceTypeComboBox" prefWidth="150" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Name:" />
        <TextField fx:id="nameField" prefWidth="150" promptText="Enter device name" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Price:" />
        <TextField fx:id="priceField" prefWidth="150" promptText="Enter price" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Weight:" />
        <TextField fx:id="weightField" prefWidth="150" promptText="Enter weight" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Additional Info:" />
        <TextField fx:id="additionalField" prefWidth="150" promptText="Enter additional info" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add Device" onAction="#onAddButtonClicked" />
        <Button text="Delete Device" onAction="#onDeleteButtonClicked" />
    </HBox>

    <ListView fx:id="listView" prefHeight="200" prefWidth="400" />
</VBox>